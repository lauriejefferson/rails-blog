<header class= "flex justify-between bg-indigo-500 text-white p-3">
<div>
<%= link_to 'Rails Blog', root_path %>
</div>
<nav>
<ul class="flex justify-end">
<% if current_user  %>
    <li class="ml-2">
    <%= button_to 'Log out', destroy_user_session_path, method: :delete, data: {turbo: false},  class: "rounded bg-emerald-400 p-3" %>
</li>
<% else %>
<li class="ml-2">
<%= link_to 'Login', user_session_path,  class: "rounded bg-emerald-400 p-3" %>
</li>
<li class="ml-2">
<%= link_to "Sign Up", new_user_registration_path, class: "rounded bg-emerald-400 p-3" %>
</ul>
<% end %>
</nav>
</header>